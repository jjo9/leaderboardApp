<h1>User Info</h1>

<% if ( tabela.length == 0 ){ %>
  <h2>User not found</h2>
<% } else { %>
  <% for ( var i = 0;  i < tabela.length; i++) { %>
  <div class="jumbotron">
  <h1 class="display-6" style="display: inline" ><strong>Username:</strong> <%= tabela[i].username %></h1> 

<% var options = { year: 'numeric', month: 'long', day: 'numeric' }; %>

  <h5 class="since">Created in: <%= tabela[i].dataCriacao.toLocaleString('pt-BR',options) %> </h5> <br>

  <font size="6"><span class="badge badge-pill badge-info">Score: <%= tabela[i].pontos %></span></font>
  
  <hr class="my-4">
  <ul class="list-group">
  <li class="list-group-item d-flex justify-content-between align-items-center">
    Challenges Solved
    <span class="badge badge-primary badge-pill"><%= tabela[i].perguntasResolvidas.length %></span>
    <a href="/userPerguntasInfo/<%= tabela[i]._id%>/perguntasResolvidas">See all</a>
  </li>
  <li class="list-group-item d-flex justify-content-between align-items-center">
    Challenges Sent &ensp;
    <span class="badge badge-primary badge-pill"><%= tabela[i].perguntasEnviadas.length %></span>
    <a href="/userPerguntasInfo/<%= tabela[i]._id%>/perguntasEnviadas">See all</a>
  </li>
</ul>
</div>
  
  <% } %>

<% } %>
