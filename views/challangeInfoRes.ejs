<% if ( tabela.length == 0 ){ %>
  <h2>Challenges were not found</h2>
<% } else { %>
  <% for ( var i = 0;  i < tabela.length; i++) { %>
    <h3>Challenges Solved</h3>
      <% for( var ii = 0; ii < tabela[i].perguntasResolvidas.length; ii++){ %>
        
        <tr class="table-light">
          <th scope="row">#<%= ii +1 %></th>
          <% if( tabela[i].perguntasResolvidas[ii].perguntaID2 == false) { %>
            <h5>Error: challenge not found</h5>
            <% } else {%>
          <td>
            <form action="/findChallenge" method="post">
              <button type="submit" name="username" value="<%= tabela[i].perguntasResolvidas[ii].perguntaID %>" class="btn-link"><%= tabela[i].perguntasResolvidas[ii].perguntaID2 %></button>
            </form>
            </td>
            <% } %>
        </tr>
        
    <% } %>
  <% } %>
<% } %>
